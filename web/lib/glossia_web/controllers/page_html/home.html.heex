<!-- Hero Section -->
<section class="Marketing_Hero">
  <div class="marketing-container">
    <div class="text-center">
      <h1 class="Marketing_Hero_Title">
        Build globally.<br />
        <span class="Marketing_Hero_Gradient">Ship locally.</span>
      </h1>

      <p class="Marketing_Hero_Subtitle">
        The modern translation platform that seamlessly integrates with your development workflow.
        Continuous localization powered by AI, delivered through merge queues.
      </p>

      <div style="display: flex; gap: 1rem; justify-content: center; flex-wrap: wrap;">
        <a href="/login" class="Marketing_Button Marketing_Button--primary">
          Start building
          <svg width="16" height="16" viewBox="0 0 16 16" fill="none">
            <path
              d="M3 8H13M13 8L9 4M13 8L9 12"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
            />
          </svg>
        </a>
        <a href="/about" class="Marketing_Button Marketing_Button--secondary">
          Learn more
        </a>
      </div>
    </div>
  </div>
</section>

<!-- Features Section -->
<section class="Marketing_Section">
  <div class="marketing-container">
    <h2 class="Marketing_Section_Title">
      Translation that thinks like a developer
    </h2>
    <p class="Marketing_Section_Subtitle">
      Built on software engineering best practices, not spreadsheets
    </p>

    <div class="Marketing_Grid">
      <div class="Marketing_Card ">
        <div class="Marketing_Icon">
          <svg viewBox="0 0 24 24" fill="none" stroke-width="2">
            <path
              d="M16.023 9.348h4.992v-.001M2.985 19.644v-4.992m0 0h4.992m-4.993 0l3.181 3.183a8.25 8.25 0 0013.803-3.7M4.031 9.865a8.25 8.25 0 0113.803-3.7l3.181 3.182m0-4.991v4.99"
