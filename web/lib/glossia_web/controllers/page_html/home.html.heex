<%= if @recent_posts != [] do %>
  <!-- Blog Section -->
  <section class="Marketing_Section Marketing_Section--alt">
    <div class="marketing-container">
      <h2 class="Marketing_Section_Title">Latest insights</h2>
      <p class="Marketing_Section_Subtitle">
        Best practices for continuous localization
      </p>

      <div class="Marketing_Grid">
        <%= for post <- @recent_posts do %>
          <article class="Marketing_Card ">
            <div style="margin-bottom: 1rem;">
              <time datetime={post.date} style="font-size: 0.875rem; color: var(--text-tertiary);">
                {Calendar.strftime(post.date, "%B %d, %Y")}
              </time>
            </div>
            <h3 style="font-size: 1.5rem; font-weight: 600; margin-bottom: 0.75rem; line-height: 1.3;">
              <a href={~p"/blog/#{post.id}"} style="color: inherit; text-decoration: none;">
                {post.title}
              </a>
            </h3>
            <p style="color: var(--text-secondary); line-height: 1.6; margin-bottom: 1rem;">
              {String.slice(post.description, 0, 150)}...
            </p>
            <div style="display: flex; align-items: center; justify-content: space-between;">
              <span style="font-size: 0.875rem; font-weight: 500; color: var(--text-tertiary);">
                {post.author}
              </span>
              <a
                href={~p"/blog/#{post.id}"}
                style="color: var(--glossia-pink); text-decoration: none; font-weight: 500;"
              >
                Read more →
              </a>
            </div>
          </article>
        <% end %>
      </div>

      <div style="text-align: center; margin-top: 3rem;">
        <a href="/blog" class="Marketing_Button Marketing_Button--secondary">
          View all posts
        </a>
      </div>
    </div>
  </section>
<% end %>

<!-- CTA Section -->
<section class="Marketing_Section" style="padding: 8rem 0;">
  <div class="marketing-container">
    <div style="text-align: center; max-width: 800px; margin: 0 auto;">
